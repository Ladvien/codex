# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=codex_memory
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Connection Pool Configuration
MAX_CONNECTIONS=100
MIN_CONNECTIONS=10
CONNECTION_TIMEOUT_SECONDS=30
IDLE_TIMEOUT_SECONDS=600
MAX_LIFETIME_SECONDS=1800

# PgBouncer Configuration (if using)
PGBOUNCER_HOST=localhost
PGBOUNCER_PORT=6432

# Monitoring
PROMETHEUS_PORT=9091
METRICS_ENABLED=true

# Logging
RUST_LOG=info,codex_memory=debug,migration=debug,memory_core=debug

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/codex

# S3 Configuration (for cold storage)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=codex-cold-storage
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# Migration Configuration
MIGRATION_DIR=./migration/migrations
AUTO_MIGRATE=true